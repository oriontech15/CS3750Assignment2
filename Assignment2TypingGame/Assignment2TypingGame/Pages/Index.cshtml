@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
    <script type="module" src="js/site.js"></script>
</head>

<body>
<div class="text-center">

            <h1>Typing Game Login</h1>

            <div class="container">
                <div class="row">
                    <div class="col-lg-10 col-xl-9 mx-auto">
                        <div class="card card-signin flex-row my-5">
                            <div class="card-body">
                                <h5 class="card-title text-center">Register</h5>
                                @*<form class="form-signin">*@
                                    <div class="form-label-group form-group row">
                                        <input type="text" id="inputUserame" class="form-control spaced" asp-for="UserObj.Username" placeholder="Username"
                                               required autofocus>
                                    </div>
                                 
                                    <hr>

                                    @*@if (Model.UserObj.Id != 0)
                                    {
                                    <input type="hidden" asp-for="UserObj.Id" />}*@

                                    <div class="form-label-group">
                                        <input id="passwordField" type="password" class="form-control spaced" asp-for="UserObj.Password" placeholder="Password"
                                               required>
                                    </div>

                                    <div class="form-label-group">
                                        <input id="confirmPasswordField" type="password" class="form-control spaced" placeholder="Confirm Password"
                                               required>
                                    </div>

                                    <button class="btn btn-lg btn-primary btn-block text-uppercase form-control" type="submit">
                                        Create
                                        Account
                                    </button>
                                    <a id="authModeButton" class="d-block text-center mt-2 small"></a>
                                @*</form>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>